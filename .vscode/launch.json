{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "pwa-chrome",
      "request": "launch",
      "name": "Launch Chrome against localhost",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}",
      "sourceMapPathOverrides": {
        "webpack://*/./*": "${webRoot}/*"
      },
      "skipFiles": ["chrome-error://*"]  // Ignore Chrome's internal error pages
    }
  ]
}

